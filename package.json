{
  "name": "@thisisagile/easy-test",
  "version": "0.1.0",
  "description": "Straightforward library for testing microservices built with @thisisagile/easy",
  "author": "Sander Hoogendoorn",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index",
  "repository": {
    "type": "git",
    "url": "git@github.com:thisisagile/easy-test.git"
  },
  "keywords": [
    "typescript",
    "microservices",
    "domain-driven-design",
    "evolutionary-architecture",
    "jest",
    "unit testing"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "postlint": "npm run format",
    "format": "prettier --write src test *.js *.json",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test": "jest --coverage",
    "prepack": "npm run build",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "typescript": "^4.2.3",
    "weak-napi": "^2.0.2"
  },
  "dependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.1",
    "jest-junit": "^12.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "ts-jest": "^26.5.3"
  },
  "engines": {
    "node": ">=v14.16.0",
    "npm": ">=7.7.6"
  }
}
